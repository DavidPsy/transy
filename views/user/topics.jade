extends ../layout
include ../mixin/topic

block vars
  -var title='我的选集'
  -var page='page-user-topics'

block content
  div.row
    div.span8
      h2.mb15.clear #{u.name} / 创建的话题

    div.span4
      div.button-set.place-right(data-role='button-set')
        a.button(href='/u/#{u.name}')
          | 译文

        a.button(href='/u/#{u.name}/collect')
          | 收藏

        a.button.active(href='/u/#{u.name}/topics')
          | 话题
  
  div.clear.mb5

  mixin topics(cols)
