extends layout
include mixin/article

block vars
  -var title = 'Transy | 翻译外文精华'
  -var page = 'page-index'

block content
  div.row
    div.span8
      h2.page-header 最新

      mixin articles(articles)
    
    div.span4
      h4 近期热门

      ul.hot-articles
        for a in hotArticles
          li
            a(href='/article/#{a.id}') #{a.cnTitle}
