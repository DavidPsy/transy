extends layout

block vars
  -var title='Transy'
  -var page='page-index'

block content
  div.row
    div.span8
      each a in articles
        div.article-item
          a(href='/article/#{a.id}')
            h3.en-title #{a.enTitle}

          a(href='/article/#{a.id}')
            h4.cn-title #{a.cnTitle}

          div.info-wap
            span 作者：
            span #{a.author}

            span.divider

            span 链接：
            a(href='#{a.url}', target="_blank")
              i.icon-link

            span.divider

            span 进度：
            span #{a.completion}%
    
    div.span4
      //- h3 近期热门
